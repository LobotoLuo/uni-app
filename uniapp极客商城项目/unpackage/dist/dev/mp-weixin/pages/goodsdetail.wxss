.goodsdetail {
  position: relative;
}
.goodsdetail ::-webkit-scrollbar {
  display: none;
  /* Chrome Safari */
}
.goodsdetail .scroll {
  background-color: #f0f0f0;
  position: fixed;
  top: 0px;
  left: 0px;
  right: 0px;
  bottom: 50px;
}
.goodsdetail .scroll .goodscard {
  background-color: #ffffff;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  margin: 10px;
  padding: 10px;
}
.goodsdetail .scroll .goodscard .price {
  color: #ff0000;
  font-size: 18px;
  height: 40px;
  display: flex;
  align-items: center;
  margin-left: 10px;
}
.goodsdetail .scroll .goodscard .tag {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 30px;
  padding: 10px;
}
.goodsdetail .scroll .goodscard .tag .tag-title {
  width: 50px;
  height: 20px;
  border-radius: 10px;
  background-color: #ff0000;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodsdetail .scroll .goodscard .goodsname {
  margin-left: 10px;
  margin-right: 10px;
  color: #000000;
  font-size: 18px;
  font-weight: bold;
  margin-top: 10px;
}
.goodsdetail .scroll .goodscard .menu {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.goodsdetail .scroll .goodscard .menu .item {
  height: 40px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.goodsdetail .scroll .goodscard .menu .item image {
  width: 20px;
  height: 20px;
}
.goodsdetail .scroll .goodscard .menu .item .title {
  font-size: 14px;
  color: #666666;
  margin-left: 5px;
}
.goodsdetail .scroll .goodscard .color {
  display: flex;
  align-items: center;
  height: 40px;
}
.goodsdetail .scroll .goodscard .color .title {
  margin-left: 10px;
  color: #666666;
  font-size: 16px;
}
.goodsdetail .scroll .goodscard .color .colorpicker {
  margin-left: 20px;
  font-size: 16px;
}
.goodsdetail .scroll .goodscard .item {
  display: flex;
  align-items: center;
  height: 40px;
}
.goodsdetail .scroll .goodscard .item .title {
  margin-left: 10px;
  color: #666666;
  font-size: 16px;
}
.goodsdetail .scroll .goodscard .item .content {
  margin-left: 20px;
  font-size: 16px;
}
.goodsdetail .scroll .goodscard .comment {
  margin-left: 10px;
  margin-top: 20px;
  font-size: 20px;
  font-weight: bold;
}
.goodsdetail .scroll .goodscard .commentitem {
  display: flex;
  flex-direction: column;
  margin-top: 20px;
}
.goodsdetail .scroll .goodscard .commentitem .user {
  display: flex;
  height: 40px;
}
.goodsdetail .scroll .goodscard .commentitem .user .myimg {
  margin-left: 10px;
  width: 40px;
  height: 40px;
}
.goodsdetail .scroll .goodscard .commentitem .user .info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goodsdetail .scroll .goodscard .commentitem .user .info .name {
  font-size: 14px;
  margin-left: 10px;
}
.goodsdetail .scroll .goodscard .commentitem .user .info .time {
  color: #999999;
  font-size: 14px;
  margin-left: 10px;
}
.goodsdetail .scroll .goodscard .commentitem .content {
  margin-left: 10px;
  margin-top: 10px;
}
.goodsdetail .scroll .goodsimg {
  width: 100%;
  height: 100vw;
}
.goodsdetail .back {
  width: 30px;
  height: 30px;
  position: absolute;
  left: 15px;
  top: 20px;
  z-index: 99;
}
.goodsdetail .goodsmenu {
  position: fixed;
  left: 0px;
  right: 0px;
  bottom: 0px;
  z-index: 99;
}

