.db-goodsdetailmenu {
  background-color: #ffffff;
}
.db-goodsdetailmenu .menu {
  display: flex;
  align-items: center;
  height: 50px;
}
.db-goodsdetailmenu .menu .small-item {
  width: 60px;
  height: 50px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.db-goodsdetailmenu .menu .small-item image {
  width: 30px;
  height: 30px;
}
.db-goodsdetailmenu .menu .long-btn {
  flex: 1;
  display: flex;
}
.db-goodsdetailmenu .menu .long-btn .addbtn, .db-goodsdetailmenu .menu .long-btn .buybtn {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #F0AD4E;
  color: #ffffff;
  height: 46px;
  flex: 1;
  border-top-left-radius: 23px;
  border-bottom-left-radius: 23px;
  font-size: 16px;
}
.db-goodsdetailmenu .menu .long-btn .buybtn {
  background-color: #ff0000;
  border-top-left-radius: 0px;
  border-bottom-left-radius: 0px;
  border-top-right-radius: 23px;
  border-bottom-right-radius: 23px;
}

